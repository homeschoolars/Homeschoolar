# ============================================
# HomeSchoolar Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# Rename this file to .env.example before deployment

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/homeschoolar

# ============================================
# AI Configuration (Google Gemini)
# ============================================
# Get your API key from: https://aistudio.google.com/apikey
# Required for AI assessment, worksheets, grading, quizzes, and recommendations.
# Use .env.local (create from this file) and RESTART dev server after adding.
# Check GET /api/health â€” gemini_configured: true means the key is loaded.
GOOGLE_GENERATIVE_AI_API_KEY=your-google-generative-ai-api-key-here
# Daily AI usage limit per user (server-side guardrail)
AI_DAILY_LIMIT=50

# ============================================
# Auth.js Configuration
# ============================================
# Generate a strong secret: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here
AUTH_URL=http://localhost:3000

# ============================================
# Stripe Payment Configuration
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
# Webhook secret - get this after creating a webhook endpoint in Stripe dashboard
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# ============================================
# Payment Gateways (Payoneer / JazzCash / EasyPaisa)
# ============================================
# Use sandbox endpoints and keys for testing. Switch to live values for production.
PAYONEER_API_BASE=https://sandbox.payoneer.com
PAYONEER_API_KEY=your-payoneer-api-key
PAYONEER_WEBHOOK_SECRET=your-payoneer-webhook-secret

JAZZCASH_API_BASE=https://sandbox.jazzcash.com.pk
JAZZCASH_MERCHANT_ID=your-jazzcash-merchant-id
JAZZCASH_PASSWORD=your-jazzcash-password
JAZZCASH_WEBHOOK_SECRET=your-jazzcash-webhook-secret

EASYPAISA_API_BASE=https://sandbox.easypaisa.com.pk
EASYPAISA_MERCHANT_ID=your-easypaisa-merchant-id
EASYPAISA_API_KEY=your-easypaisa-api-key
EASYPAISA_WEBHOOK_SECRET=your-easypaisa-webhook-secret

# ============================================
# Backend API Configuration
# ============================================
# Backend URL - use localhost for development, production URL for deployment
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# ============================================
# CORS Configuration (Backend)
# ============================================
# Comma-separated list of allowed origins for the backend API
# For production, use your frontend domain(s)
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# ============================================
# Email Configuration (Optional)
# ============================================
# Get your API key from: https://resend.com/api-keys
# Currently optional - email features are commented out but can be enabled
RESEND_API_KEY=re_your-resend-api-key-here

# ============================================
# Optional Analytics
# ============================================
# Set to "true" only when running on Vercel
NEXT_PUBLIC_ENABLE_VERCEL_ANALYTICS=false

# ============================================
# Environment Configuration
# ============================================
# Set to 'production' for production deployments
NODE_ENV=development

# ============================================
# Notes
# ============================================
# 1. All NEXT_PUBLIC_* variables are exposed to the browser
# 2. Never commit secrets to version control
# 3. Use different keys for development and production
# 4. For Vercel deployment, add these in your project settings
